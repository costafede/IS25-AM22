<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.is25am22new.FXMLControllers.BuildingShipController"
           prefWidth="1280" prefHeight="720">

    <!-- Galaxy background -->
    <Canvas fx:id="galaxyBackground" width="1280" height="720"/>

    <!-- Semi-transparent overlay for better visibility -->
    <StackPane styleClass="overlay-pane"/>

    <!-- Main content -->
    <VBox alignment="CENTER" spacing="20">
        <!-- Title at the top -->
        <Label text="Build Your Ship" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e0f7ff;"/>

        <!-- Covered Tiles Heap in the center -->
        <StackPane alignment="CENTER">
            <ImageView fx:id="coveredTilesHeap" fitWidth="200" preserveRatio="true" onMouseClicked="#pickCoveredTile">
                <image>
                    <Image url="@Graphics/ComponentTilesHeap.png"/>
                </image>
            </ImageView>
        </StackPane>

        <!-- Instructions -->
        <Label text="Click on the tile heap to draw a component"
               style="-fx-font-size: 18px; -fx-text-fill: #e0f7ff;"/>
    </VBox>
</StackPane>