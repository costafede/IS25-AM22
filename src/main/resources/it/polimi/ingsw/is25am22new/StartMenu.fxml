<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<StackPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.is25am22new.FXMLControllers.StartMenuController">

    <VBox alignment="TOP_CENTER">
        <padding>
            <Insets top="50" />
        </padding>
        <!-- TITLE -->
        <ImageView fitWidth="800" preserveRatio="true">
            <image>
                <Image url="@Graphics/BetterHorizontalLogo_copy-removebg-preview.png"/>
            </image>
        </ImageView>
    </VBox>
    <VBox alignment="CENTER">
        <padding>
            <Insets top="400" />
        </padding>
        <Button fx:id="playButton" alignment="CENTER" mnemonicParsing="false"
                onAction="#switchToConnectToServerScene"
                scaleX="3.0" scaleY="3.0" text="PLAY"
                styleClass="lobby-button"/>
    </VBox>
</StackPane>