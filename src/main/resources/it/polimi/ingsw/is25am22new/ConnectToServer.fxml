<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.ingsw.is25am22new.FXMLControllers.ConnectToServerController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER">
        <Label text="Connect to Server" styleClass="lobby-label"/>
        <TextField fx:id="ipAddressField" promptText="Enter IP Address" />
        <TextField fx:id="portField" promptText="Enter Port" />
        <Button fx:id="connectButton" text="Connect"/>
        <Label fx:id="errorLabel" textFill="RED"/>
    </VBox>
</AnchorPane>
